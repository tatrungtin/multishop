extends ../template_admin

block head

block content
 .row
  .col-xs-12
  .box
   .box-header
    h3.box-title Products
   .box-body
       #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
        .row
         .col-sm-12
          #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
           .row
            .col-sm-12
             #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
              .row
               .col-sm-12
                table#example1.table.table-bordered.table-striped.dataTable.no-footer(role='grid', aria-describedby='example1_info')
                 thead
                  tr(role='row')
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Name
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Photo 
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Price
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Quantity
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Views
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Featured
                   th.sorting(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Status: activate to sort column ascending', style='width: 142px;') Status
                   th.sorting(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Action: activate to sort column ascending', style='width: 250px;') Action
                 tbody
                  -if(products != null)
                    -for product in products
                      tr
                       td.sorting_1= product.name
                       td.sorting_1
                        img(src="/images/home/" + product.photo, width="50")
                       td.sorting_1= '$' + product.price.toFixed(2)
                       td.sorting_1= product.quantity
                       td.sorting_1= product.views
                       td= product.special ? 'Yes' : 'No'
                       td= product.status ? 'Active' : 'Deactivate'
                       td                         
                        a(href='/admin/product/edit/' + product.id) Edit | 
                        a(href='/admin/product/delete/' + product.id, onclick="return confirm('Are you sure?')") Delete
