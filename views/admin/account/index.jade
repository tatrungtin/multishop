extends ../template_admin

block head

block content
 .row
  .col-xs-12
  .box
   .box-header
    h3.box-title Accounts
   .box-body
       #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
        .row
         .col-sm-12
          #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
           .row
            .col-sm-12
             #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
              .row
               .col-sm-12
                table#example1.table.table-bordered.table-striped.dataTable.no-footer(role='grid', aria-describedby='example1_info')
                 thead
                  tr(role='row')
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Username
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Full Name
                   th.sorting_desc(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Name: activate to sort column ascending', style='width: 130px;', aria-sort='descending') Email
                   th.sorting(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Status: activate to sort column ascending', style='width: 142px;') Status
                   th.sorting(tabindex='0', aria-controls='example1', rowspan='1', colspan='1', aria-label='Action: activate to sort column ascending', style='width: 250px;') Action
                 tbody
                  -if(accounts != null)
                    -for account in accounts
                      tr
                       td.sorting_1= account.username
                       td.sorting_1= account.fullName
                       td.sorting_1= account.email
                       td= account.status ? 'Active' : 'Deactivate'
                       td
                        a(href='/admin/order/customer/' + account.username) Orders | 
                        a(href='/admin/account/edit/' + account.username) Edit | 
                        a(href='/admin/account/delete/' + account.username, onclick="return confirm('Are you sure?')") Delete